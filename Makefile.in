TAR=tar
GZIP_ENV=--best

PREFIX=@prefix@
exec_prefix=$(PREFIX)
BINDIR=$(PREFIX)/bin
DOCDIR=/usr/share/doc/pbs-python
EXAMPLES=$(DOCDIR)/examples

.PHONY: install pythonlib
pythonlib:
	#(cd src; make)
	python setup.py build

install: pythonlib sara_install
	#mkdir -p $(DESTDIR)/@pyexecdir@ $(DESTDIR)/$(BINDIR)
	#install build/lib*/* $(DESTDIR)/@pyexecdir@
	#(cd examples; for i in *py; do install $$i  $(DESTDIR)/$(EXAMPLES)/$${i//.py/}; done)
	#python ./setup.py install --prefix $(DESTDIR)/@pyexecdir@ ;

	python ./setup.py install --prefix $(DESTDIR)/$(exec_prefix) ;
	install -D LICENSE.SARA $(DESTDIR)/$(DOCDIR)/LICENSE.SARA
	(cd examples; for i in *py; do install -D $$i  $(DESTDIR)/$(EXAMPLES)/$${i}; done)

sara_install:
	install -D examples/rack_pbsmon.py $(DESTDIR)/$(BINDIR)/pbsmon

clean:
	cd src; make clean	
	rm -rf config.log config.cache config.status build

distclean: clean
	rm -rf Makefile
